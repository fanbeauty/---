@import '../tpls/music.wxss';
.foryou{
  margin: 20px auto 20px auto;
  text-align: center;
  height: 30px;
  width: 150px;
  border-bottom: 1px dashed #F8C3CD;
}

.foryou text{
  font-size: 15px;
  font-family: "KaiTi_GB2312";
}

.search{
  height: 40px;
  background-color: #f3f3f3;
  display: flex;
  flex-direction: row;
}
.search input{
  width: 280px;
  height: 28px;
  border-radius: 3px;
  background-color: white;
  margin-top: 6px;
  margin-left: 10px;  
  padding-left: 20px;
}

.search button{
  border: 1px solid #f3f3f3;
  font-size: 15px;
  line-height: 40px;
}

.result{
  display: flex;
  flex-direction: column;
  margin-top: 10px;
}

.result .result-item{
  padding: 5px 0px 5px 5px;
  display: flex;
  flex-direction: row;
  border-bottom: 1px dashed #F8C3CD;
}

.result .result-item image{
  width:100px;
}

.result .result-item .titleAndariticle{
  display: flex;
  flex-direction: column;
  margin-left: 5px;
}

.result .result-item .titleAndariticle .title{
  margin-top: 20px;
  font-size: 16px;
  font-weight: bold;
}

.result .result-item .titleAndariticle .ariticle{
  width:250px;
  height: 14px;
  margin-top: 10px;
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recentSearch{
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  padding: 0px 10px 0px 10px;
}

.recentSearch .searchTextAndDelete{
  display: flex;
  flex-direction: row; 
  height: 30px;
}

.recentSearch .searchTextAndDelete text{
  font-size: 16px;
  line-height: 30px;
}

.recentSearch .searchTextAndDelete image{
  margin: 5px 0px 0px 260px;
  width:4%;
}

.recentSearch .someSearch{
  padding-left: 5px;
  margin-top: 5px;
  display: flex;
  flex-direction: row;
}

.recentSearch .someSearch .searchItem{
  padding-left: 5px;
  padding-right: 5px;
  height: 20px;
  font-size: 12px;
  margin-right:10px; 
  border: 1px solid #f3f3f3;
  border-radius: 7px;
}

.recentSearch .someSearch .searchItem text{
  line-height: 20px;
}