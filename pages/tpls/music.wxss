.bg_music{
  background-color: #F8C3CD;
  border-top-color: #EEA9A9;
  height: 40px;
  width: 375px;
  position: fixed;
  top: 0px;
  z-index: 999;
  display: flex;
  flex-direction: row;
}

.bg_music .music-left{
  width:300px;
  display: flex;
  flex-direction: row;
}


.bg_music .music-left .musicPlay{
  height: 20px;
  width: 45px;
  margin-top: 10px;
  margin-left: 20px;
}

.bg_music .music-left .musicPlay image{
  width: 100%;
  height: 100%;
}

.bg_music .music-left text{
  font-size: 14px;
  line-height: 40px;
  margin-left: 15px;
}

.bg_music .music_right{
  width: 75px;
}

.bg_music .musicStatus{
  width: 40px;
  height: 40px;
  position: absolute;
  right: 30px;
}

.bg_music .musicStatus image{
  width: 100%;
  height: 100%;
}

